<%- include("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1><span><i class="fas fa-campground"></i></span> Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
            </p>
        </div>
    </header>


    <div class="row text-center d-flex justify-content-between" style="display:flex; flex-wrap:wrap; ">
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-4 col-sm-6">
                <div class="card"> 
                        <img src="<%= campground.image %>" class="img-thumbnail">
                        <div class="caption">
                            <h4 class="text-center"><%= campground.name %></h4>
                            
                            <% if (campground.rating === 0) { %>
                                <em>No reviews yet.</em>
                                <% } else { %>
                                    <% for (i = 0; i < Math.floor(campground.rating); i++) { %>
                                        <i class="fas fa-star"></i>
                                    <% } %>
                                <!-- <span class="fa fa-star checked"></span>
                                <span class="fa fa-star <% if (campground.rating > 1.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (campground.rating > 2.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (campground.rating > 3.5) { %> checked <% } %>"></span>
                                <span class="fa fa-star <% if (campground.rating > 4.5) { %> checked <% } %>"></span> -->
                            <% } %>
                        
                        </div>
                        <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a>
                        </p>
                </div>
            </div>
        <% }); %>
    </div>

</div>

<%- include("../partials/footer") %>