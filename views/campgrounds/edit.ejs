<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; width: 100%;">Edit <%=campground.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action = "/campgrounds/<%=campground._id%>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.name%>" name = "campground[name]">     
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01">  <!--  val_minima ; cu_cat_creste_valoarea -->
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">View all campgrounds</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>


