<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <a href="#" class="list-group-item list-group-item-action active">Info 1</a>
                <a href="#" class="list-group-item list-group-item-action">Info 2</a>
                <a href="#" class="list-group-item list-group-item-action">Info 3</a>
            </div>
        </div>
        <div class="col-md-9">
            <div class="card">  <!-- era thumbnail -->
                <img class="img" src="<%=campground.image%>">
                <div class="caption">
                    <h4 class="pull-right">$<%=campground.price%>/night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%=campground.description%></p>
                    <p>
                        <em>Submitted by: <%= campground.author.username %>, <%= moment(campground.createdAt).fromNow() %></em>
                      </p>
                    <% if(currentUser && currentUser._id.equals(campground.author.id)){ %>  <!-- daca currentUser este autentificat si este = cu autorul -->
                        <a class="btn btn-warning btn-sm" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                        <form class="deleteForm" action = "/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>

            <br>

            <!--Review section-->
            <div class="card">
                <div class="caption">
                    <% if (campground.rating === 0) { %>
                    <h5>
                        <em>No reviews yet.</em>
                    </h5>
                    <% } else { %>
                    <p>
                        <% for (i = 0; i < Math.floor(campground.rating); i++) { %>
                            <i class="fas fa-star"></i>
                        <% } %>
                        <em>(total reviews: <%= campground.reviews.length %>)</em>
                    </p>
                    <p>
                        Current campground rating: <strong><%= campground.rating.toFixed(2) %></strong>
                    </p>
                    <p><h5>Latest reviews for this campground:</h5></p>
                    <hr style="margin-top: 0;">
                    <% campground.reviews.slice(0, 5).forEach(function(review){ %>
                    <div class="row">
                        <div class="col-md-3">
                            <% for (i = 0; i < Math.floor(review.rating); i++) { %>
                                <i class="fas fa-star"></i>
                            <% } %>
                            <div>Review by: <strong><%= review.author.username %></strong></div>
                            <span><em><%= review.updatedAt.toDateString() %></em></span>
                        </div>
                        <div class="col-md-9">
                            <p style="text-align: justify; word-wrap: break-word;">
                                <%= review.text %>
                            </p>
                            <% if(currentUser && review.author.id.equals(currentUser._id)){ %>
                            <a class="btn btn-sm btn-warning"
                               href="/campgrounds/<%=campground._id %>/reviews/<%=review._id %>/edit">Edit</a>
                            <form class="deleteForm" action="/campgrounds/<%=campground._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <hr>
                    <% }); %>
                    <div style="margin-bottom: 10px;">
                        <h5><a href="/campgrounds/<%= campground._id %>/reviews"><i class="fa fa-search" aria-hidden="true"></i>See all reviews</a></h5>
                    </div>
                    <% } %>
                    <div>
                        <a class="btn btn-primary btn-md <% if (currentUser && campground.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>" href="/campgrounds/<%= campground._id %>/reviews/new">
                            Write a New Review</a>
                    </div>
                    <br>
                </div>
            </div>

            <br>

            <div class="card">
                <div class="caption">
                    <div class="text-right">
                        <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Add New Comment</a>
                    </div>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                        <div class="row">
                            <div class="col-md-12">
                                <strong><%=comment.author.username%></strong>  <!-- comment este din function(comment) din forEach -->
                                <span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
                                <p><%=comment.text%></p>
                                <% if(currentUser && currentUser._id.equals(comment.author.id)){ %> 
                                    <a class="btn btn-sm btn-warning" href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                                    <form class="deleteForm" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                                        <input type="submit" class="btn btn-sm btn-danger" value="Delete">
                                    </form>
                                <% } %>    
                            </div>
                        </div>
                    <% }); %>
                </div>
                
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
