<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; width: 100%;">Add New Comment To <%=campground.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action = "/campgrounds/<%=campground._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Text" name = "comment[text]">  <!-- name = "text" -->
                </div>
                <!-- <div class="form-group">
                    <input class="form-control" type="text" placeholder="Author" name="comment[author]">   
                </div> 
                -->         <!-- name="author" -->
 
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back to campgrounds</a>
        </div>
    </div>
</div>

