<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; width: 100%;">Edit comment</h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action = "/campgrounds/<%=campgroundID%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%=comment.text%>" name="comment[text]">     
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-info btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

